{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "ES2020",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "allowSyntheticDefaultImports": true,
  }
}
